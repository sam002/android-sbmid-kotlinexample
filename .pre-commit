#!/bin/sh

echo "Copy artifacts to ci-scripts"
mkdir -p .ci-scripts
rm -rf .ci-scripts/*


cp build.gradle .ci-scripts/build.gradle.ci
cp gradle.properties .ci-scripts/gradle.properties.ci
cp gradlew .ci-scripts/gradlew.ci
cp settings.gradle .ci-scripts/settings.gradle.ci
cp app/src/main/AndroidManifest.xml .ci-scripts/AndroidManifest.xml.ci
cp app/build.gradle .ci-scripts/app-build.gradle.ci
#cp -r app/build .ci-scripts/
cp -r gradle .ci-scripts/
#cp -r app/libs .ci-scripts/
cp -r app/src/androidTest .ci-scripts/
cp -r app/src/main/res .ci-scripts/

git add .ci-scripts

exit